<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools ="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_list"
    android:paddingVertical="10dp">

    <ImageView
        android:id="@+id/follower_profile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.25"/>

    <TextView
        android:id="@+id/follower_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintStart_toEndOf="@+id/follower_profile"
        app:layout_constraintTop_toTopOf="@+id/follower_profile"
        tools:text="이름"/>

    <TextView
        android:id="@+id/follower_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="자기소개 텍스트입니다"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/follower_name"
        app:layout_constraintTop_toBottomOf="@+id/follower_name"/>




</androidx.constraintlayout.widget.ConstraintLayout>